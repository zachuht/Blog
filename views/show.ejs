<% include partials/header %>
  <div class="ui main text container segment">
    <div id="codeFont" class="ui huge header"><%= blog.title %></div>
    <div class="ui top attatched">
      <div class="item">
        <img class="ui centered rounded image"src="<%= blog.image %>">
        <div class="content">
          <span id="codeFont"><%= blog.created.toDateString() %></span>
        </div>
        <hr>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
        <% if(currentUser){ %>
        <a id="codeFont" class="ui orange inverted button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
          <button id="codeFont" class="ui red inverted button">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
  </div>
<% include partials/footer %>